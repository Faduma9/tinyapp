<!-- login form here -->
<% if (username === undefined) { %>
  <!-- Display login form when user is not logged in -->
  <form action="/login" method="POST" class="form-inline ml-auto">
    <input type="text" class="form-control" name="username" placeholder="Enter your Username...">
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
<% } else { %>
  <!-- Display the logged-in user information and the logout button when the user is logged in -->
  <div id="header">
    Logged in as: TinyApp <%= username %>
    <!-- Other header elements -->
    <a href="/logout">Logout</a>
  </div>
<% } %>

